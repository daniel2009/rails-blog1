<div id="post_content">
	<h1 class = "title" >
		<%= @post.title %>
	
	</h1>
	<p class = "date" >
		<%= time_ago_in_words(@post.created_at) %> Ago
		
	</p>

	<p class = "body">
		<%= @post.body %>
	</p>
	
	<% if user_signed_in? %>
		<div class = "buttons">
			<button class = "editpost_button"><%= link_to 'Edit', edit_post_path(@post) %></button>
			<button class = "deletepost_button"><%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %></button>
		</div>
	<% end %>
</div>
	
<br/>
<br/>
<div id="comments">
	<h2>All Comments(
		<%= @post.comments.count %> 
		)
	</h2>
	<%= render @post.comments %>
		
	<h3>Add a comment</h3>
	<%= render "comments/form" %>
</div>
